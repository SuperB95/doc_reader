<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="16dp"
    android:elevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/delete_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_delete"
            android:contentDescription="TÃ¶rlÃ©s"
            app:tint="@android:color/holo_red_dark" />

        <ImageButton
            android:id="@+id/rename_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_toStartOf="@id/delete_button"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_edit"
            android:contentDescription="ÃtnevezÃ©s"
            android:layout_marginEnd="8dp"
            app:tint="@android:color/holo_blue_dark" />

        <TextView
            android:id="@+id/document_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/rename_button"
            android:text="ðŸ“„ Dokumentum neve"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/document_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/document_name"
            android:text="KategÃ³ria: Nincs"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <RatingBar
            android:id="@+id/document_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/document_category"
            android:numStars="5"
            android:stepSize="1.0"
            android:isIndicator="true"
            android:rating="0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/document_rating_bar"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/feedback_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Ã‰rtÃ©kelÃ©s" />

            <Button
                android:id="@+id/category_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="KategÃ³ria"
                android:layout_marginStart="8dp" />
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
